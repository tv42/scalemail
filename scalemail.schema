objectclass ( 1.3.6.1.4.1.9586.2.100.2.2.1
	NAME 'scaleMailAccount'
	AUXILIARY
	SUP top
	MUST ( mail $ scaleMailHost )
	MAY ( scaleMailAlias $ scaleMailAlias $ 
		scaleMailForward $ scaleMailForwardCopy $
		scaleMailAway ) )

